{
  "name": "jmau/jm-twitter-cards",
  "keywords": [
    "WordPress",
    "twitter",
    "cards",
    "meta"
  ],
  "homepage": "https://github.com/jmau111/jm-twitter-cards",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "unknown",
      "email": "unknown@space.xyz"
    }
  ],
  "type": "wordpress-plugin",
  "description": "Easy integration of Twitter cards in WordPress. All card types provided.",
  "config": {
    "platform": {
        "php": "7.0"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "phpcompatibility/phpcompatibility-wp": "*",
    "squizlabs/php_codesniffer": "3.6.2",
    "yoast/phpunit-polyfills": "1.0.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
  },
  "scripts": {
    "set:version": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --config-set php_version 70000",
    "check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs -p . --standard=PHPCompatibilityWP",
		"fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  }
}
